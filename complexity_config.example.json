{
	"include": [
		"res://**/*.gd"
	],
	"exclude": [
		"res://.git/**",
		"res://.godot/**",
		"res://node_modules/**",
		"res://addons/**/test/**",
		"res://tests/**"
	],
	"cc": {
		"threshold_warn": 10,
		"threshold_fail": 20
	},
	"cog": {
		"threshold_warn": 15,
		"threshold_fail": 30
	},
	"parser": {
		"parser_mode": "balanced"
	},
	"report": {
		"formats": ["json", "csv"],
		"output_path": "res://complexity_report.json",
		"csv_output_path": "res://complexity_report.csv",
		"auto_export": false
	},
	"performance": {
		"enable_caching": true,
		"cache_path": ".gdcomplexity_cache",
		"incremental_analysis": true
	}
}