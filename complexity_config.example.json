{
	"include": [
		"res://**/*.gd"
	],
	"exclude": [
		"res://.git/**",
		"res://.godot/**",
		"res://node_modules/**",
		"res://addons/**/test/**",
		"res://tests/**"
	],
	"cc": {
		"threshold_warn": 10,
		"threshold_fail": 20
	},
	"cog": {
		"threshold_warn": 15,
		"threshold_fail": 30
	},
	"parser": {
		"parser_mode": "balanced",
		"confidence_weights": {
			"token_coverage": 0.0,
			"indentation_consistency": 0.0,
			"block_balance": 1.0,
			"parse_errors": 0.0
		}
	},
	"report": {
		"formats": ["json", "csv"],
		"output_path": "res://complexity_report.json",
		"csv_output_path": "res://complexity_report.csv",
		"auto_export": false
	},
	"performance": {
		"enable_caching": true,
		"cache_path": ".gdcomplexity_cache",
		"incremental_analysis": true
	},
	"telemetry": {
		"enable_anonymous_reporting": false
	},
	"logging": {
		"enable_console": true,
		"enable_file": false,
		"file_path": "res://complexity_analyzer.log",
		"level": "info"
	}
}